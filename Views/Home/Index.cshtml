@{
    ViewData["Title"] = "Lets Play";
}
<div class="row">
  <div class="col-md-12">
    <h1>Rock, Paper and Scissors</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-mode">
      <div class="panel-wrapper">
        <h3>Game Mode</h3>
        <button class="button button-mode" mode-button mode="human">Human</button>
        <button class="button button-mode button-disabled" mode-button mode="computer">Computer</button>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-4 panel panel-player player-human">
    <h3 class="panel-title">You</h3>
    <div class="panel-wrapper">
    </div>
  </div>
  <div class="col-md-4">
    <div class="scoreboard no-gutter">
      <div class="col-md-4">
        <div class="score">
          <h3 class="score-title">Wins</h3>
          <span score-player player="player1">{{score}}</span>
        </div>
      </div>
      <div class="col-md-4">
        <div class="score">
          <h3 class="score-title">Ties</h3>
          <span score-player player="tie">{{score}}</span>
        </div>
      </div>
      <div class="col-md-4">
        <div class="score">
          <h3 class="score-title">Wins</h3>
          <span score-player player="player2">{{score}}</span>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4 panel panel-player player-computer">
    <h3 class="panel-title">Computer</h3>
    <div class="panel-wrapper">
    </div>
  </div>
</div>
